<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../styles/style.css">
  <title>CRUD de Produtos</title>
</head>
<body>
  <div class="navbar">
    <h1 class="Hello">Market!</h1>
    </form>
 
  </div>
  

  <ul class="items">
    <div>
      <form id="productForm">
        <input type="text" id="nameInput" placeholder="nome">
        <input type="text" id="priceInput" placeholder="preço">
        <input type="text" id="quantityInput" placeholder="quantidade">
        <input type="text" id="imgInput" placeholder="image">
        <button type="submit">Adicionar</button>
      </form>

    </div>

    <% product.forEach((product) => { %>
      <img class="image" src="<%= product.image %>">
      <li class="item-list">
        <strong class="item-name"><%= product.name %></strong>
        <p class="item-price">Preço: <%= product.price %>$</p>
        <p>Quantidade:<%=product.quantity%></p>
        <button onclick="handleDelete('<%= product._id %>')" class="delete">Excluir</button>
      </li>
    <% }); %>
  </ul>

  <script>

    const handleDelete = (productId) => {
      const response = fetch(`/${productId}`, {
        method: "DELETE"
      })
      window.location.href = "/home"
    }

    document.getElementById("productForm").addEventListener('submit', async function(event) {
      event.preventDefault()

        const name = document.querySelector("#nameInput").value;
        const price = document.querySelector("#priceInput").value;
        const quantity = document.querySelector("#quantityInput").value;
        const image = document.querySelector("#imgInput").value;
        try {
          const response = await fetch('/', {method: 'POST', headers:{
            'Content-type':'application/json'
          },
          body:JSON.stringify({name, price, quantity, image})
        })
  
  
        } catch (error) {
          console.log(error)
        }

  
        window.location.href = "/home"
      }
    )


  </script>

</body>
</html>